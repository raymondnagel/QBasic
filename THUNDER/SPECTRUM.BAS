SCREEN 13: CLS
FOR COLORS = 0 TO 255
PSET (COLORS + 10, 50), COLORS
NEXT COLORS
DIM SPECTRUM(1 TO 500)
GET (10, 50)-(265, 50), SPECTRUM
CLS
PAINT (200, 100),
PUT (10, 10), SPECTRUM, XOR
DALOOP: DO
LOOP UNTIL INKEY$ = " "
GOTO DASUB

DASUB:
NEW = NEW + 1
IF NEW = 256 THEN END
LOCATE 18, 1
CURRENT = POINT(10 + NEW, 10)
COLOR 15: PRINT NEW; "..."; : COLOR CURRENT: PRINT CURRENT
PSET (10 + NEW, 10), 0
GOTO DALOOP

